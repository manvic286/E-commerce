<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

<body>
    <header>
        <%- include('./partials/nav.ejs') %>
    </header>

    <div class="p-name">
        <div class="img">

        </div>

        <div class="name">
            <h2><%- product.productName %></h2>
            <h2>$<%- product.price %></h2>
            <h2><%- product.rating %> stars</h2>
            <a href="" class="delete" data-doc="<%= product._id %>">Delete</a>
        </div>

        
        
    </div>

    <div class="description">
        <p><%- product.description %></p>
    </div>
    
    

    <%- include('./partials/footer.ejs') %>

    <script>
        const del = document.querySelector('a.delete')
        del.addEventListener(click, (e) => {
            const endpoint = `/product/${del.dataset.doc}`

            fetch(endpoint, {
                method: 'DELETE'
            })
            .then(() => {})
            .catch(err => console.log(err))
        })
    </script>
</body>
</html>